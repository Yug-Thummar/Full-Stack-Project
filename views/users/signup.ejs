<%- layout("layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-6 offset-3">
            <h1>Signup on Wanderlust</h1>
            <form action="/signup" method="post" class="needs-validation" novalidate>

                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input id="username" name="username" class="form-control" type="text" placeholder="Enter username" required>
                    <div class="invalid-feedback">username should be required</div>
                    <div class="valid-feedback">username looks good!</div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input id="email" name="email" class="form-control" type="email" placeholder="Enter email"
                        required></input>
                    <div class="valid-feedback">Email looks good!</div>
                    <div class="invalid-feedback">Email should be required</div>
                </div>

               
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input id="password" name="password" class="form-control" type="password"
                            placeholder="Enter password" required>
                        <div class="valid-feedback">Password looks good!</div>
                        <div class="invalid-feedback">Password should be required</div>
                    </div>
               
                <button class="btn btn-success">Signup</button>
                <br><br>
            </form>
        </div>
    </div>