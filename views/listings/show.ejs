<%- layout("layouts/boilerplate") %>

<script>
    const mapToken = "<%= process.env.MAP_TOKEN %>";
    const coordinates = <%- JSON.stringify(listing.geometry.coordinates) %>;
</script>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3>
                <%= listing.title %>
            </h3>
        </div>

        <div class="card col-6 offset-3 show-card">
            <img src="<%=listing.image.url %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                <div class="card-text">
                    <p>Hosted by
                        <strong>
                            <%= listing.owner.username %>
                        </strong>
                    </p>
                    <p>
                        <%= listing.description %>
                    </p>
                    <p> &#8377;<%= listing.price.toLocaleString("en-IN") %>
                    </p>
                    <p>
                        <%= listing.location %>
                    </p>
                    <p>
                        <%= listing.country %>
                    </p>
                </div>
            </div>
        </div>

        <% if(currentUser && currentUser._id.equals(listing.owner._id)) { %>
            <div class="btns">
                <a href="/listings/<%= listing.id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
                <form action="/listings/<%= listing.id %>?_method=DELETE" method="post">
                    <button class="btn btn-dark offset-5">Delete</button>
                </form>
            </div>
            <% } %>

                <div class="col-6 offset-3 mb-3">
                    <% if(currentUser) { %>
                        <hr>
                        <h4>Leave a review</h4>
                        <form method="post" action="/listings/<%= listing.id %>/reviews" class="needs-validation"
                            novalidate>
                            <div class="mb-3 mt-3">
                                <label class="form-label">Rating</label>
                                <fieldset class="starability-slot">
                                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]"
                                        value="" />
                                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                    <label for="first-rate1" title="Terrible"></label>
                                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                    <label for="first-rate2" title="Not good"></label>
                                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                    <label for="first-rate3" title="Average"></label>
                                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                    <label for="first-rate4" title="Very good"></label>
                                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                    <label for="first-rate5" title="Amazing"></label>
                                </fieldset>
                            </div>

                            <div class="mb-3 mt-3">
                                <label for="comment" class="form-label">Comment</label>
                                <textarea name="review[comment]" id="comment" rows="5" class="form-control"
                                    required></textarea>
                                <div class="invalid-feedback">Comment should be required</div>
                                <div class="valid-feedback">Comment looks good!</div>
                            </div>
                            <button class="btn btn-outline-dark">Submit</button>
                        </form>
                        <% } %>
                            <% if(listing.reviews.length> 0) { %>
                                <hr>
                                <h4>Reviews:</h4>
                                <div class="row">
                                    <% for(let review of listing.reviews) {%>
                                        <div class="card col-6 mb-3">
                                            <div class="card-body">
                                                <p class="card-title">
                                                    @<%= review.author.username %>
                                                </p>
                                                <p class="card-title">
                                                    <%= review.comment %>
                                                </p>
                                                <p class="starability-result" data-rating="<%= review.rating %>">
                                                </p>
                                                <p class="card-title">
                                                    <%= review.rating %> stars
                                                </p>
                                                <% if(currentUser && currentUser._id.equals(review.author._id)) { %>
                                                    <form
                                                        action="/listings/<%= listing.id %>/reviews/<%= review.id %>/?_method=DELETE"
                                                        method="post">
                                                        <button class="btn btn-danger btn-sm mb-3">Delete
                                                            Review</button>
                                                    </form>
                                                    <% } %>
                                            </div>
                                        </div>
                                        <% } %>
                                </div>
                                <% } %>
                </div>
                <div class="col-8 offset-3 mb-3">
                    <h3>Where you'll be</h3>
                    <div id="map" style="height:400px;width:90%"></div>
                </div>
    </div>
    <script src="/js/map.js"></script>