<%- layout("layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit Listing:</h3>
            <form action="/listings/<%= listing.id %>/?_method=PUT" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input id="title" class="form-control" name="listing[title]" type="text"
                        value="<%= listing.title %>" required>
                    <div class="invalid-feedback">Title should be required</div>
                    <div class="valid-feedback">Title looks good!</div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea id="description" name="listing[description]" class="form-control" required
                        type="text"><%= listing.description %></textarea>
                    <div class="valid-feedback">Description looks good!</div>
                    <div class="invalid-feedback">Description should be required</div>
                </div>
                
                <div class="mb-3">
                    <p>Original Listing Image</p>
                    <img src="<%= originalImageUrl %>" >                    
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image</label>
                    <input id="image" class="form-control" name="listing[image]" type="file">
                </div>

                <div class="row">
                    <div class="mb-3 col-4">
                        <label for="price" class="form-label">Price</label>
                        <input id="price" class="form-control" name="listing[price]" type="number"
                            value="<%= listing.price %>" required>
                        <div class="valid-feedback">Price looks good!</div>
                        <div class="invalid-feedback">Price should be required</div>
                    </div>

                    <div class="mb-3 col-8">
                        <label for="location" class="form-label">Location</label>
                        <input id="location" class="form-control" name="listing[location]" type="text"
                            value="<%= listing.location %>" required>
                        <div class="valid-feedback">Location looks good!</div>
                        <div class="invalid-feedback">Location should be required</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input id="country" class="form-control" name="listing[country]" type="text"
                        value="<%= listing.country %>" required>
                    <div class="valid-feedback">Country name looks good!</div>
                    <div class="invalid-feedback">Country name should be required</div>
                </div>

                <br><br>
                <button class="btn btn-dark edit-btn">Add</button>
                <br><br>
            </form>
        </div>
    </div>